<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" 
    android:background="#d3d3d3">

    <LinearLayout 
    android:layout_width="match_parent"
    	android:layout_height="95sp"
    	android:id="@+id/menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" 
    	android:layout_gravity="top" >
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="70sp"
		    android:orientation="horizontal"
    		android:weightSum="100">

			<TextView
			    android:id="@+id/tvTitle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="2048"
			    android:textColor="#808080"
			    android:layout_alignParentTop="true"
			    android:padding="10dp"
			    android:textStyle="bold"
			    android:textSize="40dp"
			    android:layout_weight="60"
			    android:textAppearance="?android:attr/textAppearanceLarge" />
			<TextView 
			    android:layout_width="75sp"
			    android:layout_height="50dp"
			    android:layout_weight="15"
			    android:gravity="center"
			    android:text="SCORE\n "
			    android:textStyle="bold"
			    android:textColor="#ffffff"
			    android:layout_toLeftOf="@+id/tvhighscore"
			    android:id="@+id/tvscore"
        		android:background="#808080"/>
			<TextView 
			    android:id="@+id/tvhighscore"
			    android:layout_width="75sp"
			    android:layout_height="50dp"
			    android:layout_weight="15"
        		android:background="#808080"
			    android:gravity="center"
			    android:text="BEST\n "
			    android:layout_alignParentTop="true"
			    android:layout_alignParentRight="true"
			    android:textStyle="bold"
			    android:textColor="#ffffff"/>
		</RelativeLayout>
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="25sp"
		    android:orientation="horizontal">
			<TextView 
			    android:id="@+id/tvrestart"
			    android:layout_width="100sp"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:gravity="left"
			    android:text="RESTART"
			    android:textSize="17dp"
			    android:textStyle="bold"
			    android:textColor="#ffa500"/>
			<TextView 
			    android:id="@+id/tvundo"
			    android:layout_width="75sp"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:gravity="right"
			    android:layout_alignParentRight="true"
			    android:text="UNDO"
			    android:textSize="17dp"
			    android:textStyle="bold"
			    android:textColor="#ffa500"/>
    	</RelativeLayout>
    	    
    	
	</LinearLayout>
    <LinearLayout
    	android:id="@+id/workspace"
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:orientation="vertical" 
        android:layout_below="@id/menu"
        android:background="#808080"
        android:weightSum="100" >
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_height="68sp"
        	android:layout_weight="25"
        	android:orientation="horizontal"
        	android:weightSum="100"
            >
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field00"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp" 
                android:gravity="center"
                android:id="@+id/field01"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:textSize="25sp" 
                android:layout_margin="5dp"
                android:id="@+id/field02"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field03"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_weight="25"
        	android:layout_height="68sp"
        	android:orientation="horizontal"
        	android:weightSum="100"
            >
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field10"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp" 
                android:gravity="center"
                android:id="@+id/field11"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:textSize="25sp" 
                android:layout_margin="5dp"
                android:id="@+id/field12"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field13"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_weight="25"
        	android:layout_height="68sp"
        	android:weightSum="100"
        	android:orientation="horizontal"
            >
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field20"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp" 
                android:gravity="center"
                android:id="@+id/field21"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:textSize="25sp" 
                android:layout_margin="5dp"
                android:id="@+id/field22"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field23"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_weight="25"
        	android:weightSum="100"
        	android:layout_height="68sp"
        	android:orientation="horizontal"
            >
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field30"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp" 
                android:gravity="center"
                android:id="@+id/field31"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#d3d3d3"
                android:gravity="center"
                android:textSize="25sp" 
                android:layout_margin="5dp"
                android:id="@+id/field32"/>
            <TextView
                android:layout_width="68sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:background="#d3d3d3"
                android:layout_margin="5dp"
                android:textSize="25sp"
                android:id="@+id/field33"/>
        </LinearLayout>
</LinearLayout>

<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingTop="10sp"
        android:layout_below="@id/workspace"
        android:orientation="horizontal"
        android:weightSum="100"
        >
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:layout_weight="25"
        android:id="@+id/bLeft"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:layout_weight="25"
        android:id="@+id/bUp"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:layout_weight="25"
        android:id="@+id/bDown"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:layout_weight="25"
        android:id="@+id/bRight"/>
</LinearLayout>
</RelativeLayout>
